
@{
    ViewData["Title"] = "Complete";
}
<br/>
<div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="100"
         aria-valuemin="0" aria-valuemax="100" style="width:100%">
        100%
    </div>
</div>

<div>
    <h2>Congratulations</h2>
    <p>
        You have completed today's reading assignment. You can either continue reading
        or go back and review what you just read.
    </p>
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-4">
            @Html.ActionLink("Go Back", "Verse4", "Home", null, new { @class = "btn btn-primary btn-sm" })
        </div>
        <div class="col-xs-4" align="center">
            @Html.ActionLink("Index", "Index", "Home", null, new { @class = "btn btn-primary btn-sm" })
        </div>
        <div class="col-xs-4" align="right">
            @Html.ActionLink("Continue", "Verse1", "Home", null, new { @class = "btn btn-primary btn-sm" })
        </div>
    </div>
